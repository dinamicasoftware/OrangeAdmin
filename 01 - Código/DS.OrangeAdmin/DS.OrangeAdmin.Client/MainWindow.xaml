<dxr:DXRibbonWindow x:Class="RibbonControl_Ex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="379" Width="643"
        xmlns:local="clr-namespace:RibbonControl_Ex"
        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
        xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
        xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        xmlns:userControls="clr-namespace:DS.OrangeAdmin.Client.UI.UserControls"
        Icon="{dxc:DXImage Image=Home_16x16.png}"
        dxc:ThemeManager.ThemeName="Office2016White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <userControls:OrangeRibbonCustomControl Grid.Row="0"></userControls:OrangeRibbonCustomControl>
        
        <Button Grid.Row="1">CLICK ME!</Button>
        
        <userControls:OrangeStatusBar Grid.Row="2"></userControls:OrangeStatusBar>
        
    </Grid>
</dxr:DXRibbonWindow>